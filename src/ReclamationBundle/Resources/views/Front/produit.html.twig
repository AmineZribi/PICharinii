                <div class="row comment">
                    <div class="col-sm-3 col-md-2 text-center-xs">
                        <p>
                            <img src="{{ asset('images/boy.png') }}" class="img-responsive img-circle" alt="">
                        </p>
                    </div>
                    <div class="col-sm-9 col-md-10">
                        <h5>{{ cc.idClient.username }}</h5>
                        <p class="posted"><i class="fa fa-clock-o"></i> {{ cc.dateCommentaire }}</p>
